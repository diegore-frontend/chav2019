extend ../layout/_layout

block content
	article.ap-practica.ap-prtc#ap-practica
		.ap-prtc-desc
			nav.ap-prtc-nav
				a.ap-btn-link(href="./areas-practica.html")
					svg.icon
						use(xlink:href="#left")

					| Regresar

			article.ap-prtc-detail
